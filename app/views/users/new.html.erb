<section class="vh-100" >
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="mb-5">Sign up</h3>
            <%= form_for(@user, data: {controller: 'form'}) do |f| %>
              <div class="form-outline mb-4">
              <%= f.label :name%><br>
              <%= f.text_field :name,:class=> "form-control form-control-lg", required: true%><br>
               </div>
               <div class="form-outline mb-4">
               <%= f.label :email%>
               <%= f.email_field :email, :class=> "form-control form-control-lg", required: true %><br>
               </div>
               <div class="form-outline mb-4">
               <%= f.label :password%><br>
               <%= f.password_field :password,:class=> "form-control form-control-lg", required: true%><br>
               </div>
               <%= submit_tag "Sign Up" ,:class=> "btn btn-primary btn-lg btn-block"%>
            <%end %>
            <hr class="my-4">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


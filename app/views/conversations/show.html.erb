<h1>
  <%= @conversation.id %>
</h1>

<div class="row">
  <div class="col-12 col-md-3">
    <%= render partial: 'conversations' %>
  </div>

  <div class="col">
    <div class="chat" data-channel-subscribe="conversation"  id="conversation-room-id" data-conversation-id="<%= @conversation.conversation_room_id %>">
      <% @conversation_messages.each do |conversation_message| %>
        <div class="chat-message-container">
          <div class="row no-gutters">
            <div class="col-auto text-center">
            </div>
            <div class="col">
              <div class="message-content">
                <p class="mb-1">
                  <%= conversation_message.message %>
                </p>
                <div class="text-right">
                  <small>
                    <%= conversation_message.created_at %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= form_for @conversation_message, remote: true do |form| %>
      <div class="input-group mb-3">
        <%= form.text_field :message, as: :string,
                                 wrapper: false,
                                 label: false,
                                 input_html: {
                                   class: 'chat-input',
                                   autocomplete: 'off'
                                 } %>
        <div class="input-group-append">
        <%= form.hidden_field :conversation_id %>
          <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="d-none" data-role="message-template">
  <div class="chat-message-container">
    <div class="row no-gutters">

      <div class="col">
        <div class="message-content">
          <p class="mb-1" data-role="message-text">

          </p>

          <div class="text-right">
            <small data-role="message-date">
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>